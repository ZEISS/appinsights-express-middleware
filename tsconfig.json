{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2016"],
    "sourceMap": false,
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
